{
  "name": "Badger",
  "version": "0.1",
  "description": "A web extension that will badger you to do things.",
  "homepage_url": "https://github.com/biggestcookie/Badger",
  "manifest_version": 2,
  "icons": {},
  "browser_action": { "default_popup": "popup/popup.html" },
  "permissions": ["storage", "alarms"],
  "background": {
    "scripts": ["js/browser-polyfill.min.js", "js/background.js"]
  },
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  }
}
